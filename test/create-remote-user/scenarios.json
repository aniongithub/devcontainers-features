{
  "default_configuration": {
    "image": "debian:bookworm-slim",
    "features": {
      "create-remote-user": {}
    },
    "remoteUser": "remote"
  },
  "do_not_add_to_sudo": {
    "image": "debian:bookworm-slim",
    "features": {
      "create-remote-user": {
        "addToSudo": false,
        "installSudo": false
      }
    },
    "remoteUser": "remote"
  },
  "sudo_does_not_require_a_password": {
    "image": "debian:bookworm-slim",
    "features": {
      "create-remote-user": {
        "passwordLessSudo": true
      }
    },
    "remoteUser": "remote"
  },
  "with_additional_groups": {
    "image": "debian:bookworm-slim",
    "features": {
      "create-remote-user": {
        "additionalGroups": "audio,video,plugdev"
      }
    },
    "remoteUser": "remote"
  }
}
